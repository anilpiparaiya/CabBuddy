<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    
    <title>Travel Form</title>
</head>
<body>
    <div class="background_img">
        <div class="head">
            <a href="/dashboard"><img src="css/images/Cab-Sharing.svg" class="logo"></a>
            <nav>
                <ul>
                    <a href ="/travelform"><button class="btn" id="btn2" style="padding: 15px 150px">Travelling Form</button></a>
                </ul>
            </nav>
            <a href="/logout"><button class="btn" id="btn1">Log out</button></a>
        </div>
        <div class="container-xl px-4 mt-6">
            <!-- Account page navigation-->
            <hr class="mt-0 mb-4">
            <div class="row">
                <div class="col-xl-2">
                </div>
                <div class="col-xl-8">
                    <!-- Account details card-->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="card-header">Travel details</div>
                            <% if(locals.errors){ %> <% errors.forEach(function(error) { %>
        <div class="alert1">
            <span class="closebtn1" onclick="this.parentElement.style.display='none';">&times;</span>
            <p style="font-size:15px;"> <%= error.msg %></p>
          </div>
        <% }); %> <% } %> <% if(success_msg != ''){ %>
                <div class="success1">
                    <span class="closebtn1" onclick="this.parentElement.style.display='none';">&times;</span>
                    <p style="font-size:15px;" > <%= success_msg %></p>
                  </div>
            <% } %> <% if(error_msg != ''){ %>
                <div class="alert1">
                    <span class="closebtn1" onclick="this.parentElement.style.display='none';">&times;</span>
                    <p style="font-size:15px;"> <%= error_msg %></p>
                  </div>
            <% } %> <% if(error != ''){ %>
                <div class="alert1">
                    <span class="closebtn1" onclick="this.parentElement.style.display='none';">&times;</span>
                    <p style="font-size:15px;"> <%= error %></p>
                  </div>
            <% } %> 
                            <form action="/travelform" method="POST">
                                
                                <!-- Form Group (username)-->
                                <div class="mb-3" >
                                    <label class="small mb-1" >Starting Point</label>
                                    <input class="form-cont" type="text" id="origin" name="origin" placeholder="Enter Starting point" >
                                </div>
                                <div class="mb-3" >
                                    <label class="small mb-1" >End Point</label>
                                    <input class="form-cont" type="text" id="destination" name="destination" placeholder="Enter End point"  >
                                </div>
                                <div class="mb-3">
                                    <label class="small mb-1" for="inputEmailAddress">No of Passenger</label>
                                    <select id="Noof" name = "Noof" class="form-select">
                                        <option  value=1>1</option>
                                        <option  value=2>2</option>
                                        <option  value=3>3</option>
                                      </select> 
                                </div>
                                <div class="mb-3">
                                    <label class="small mb-1" for="inputEmailAddress">Gender Preference</label>
                                    <select id="Gen" name = "Gen" class="form-select">
                                        <option  value="None">None
                                        </option>
                                        <option  value="Male">Male</option>
                                        <option  value="Female">Female</option>
                                      </select> 
                                </div>
                                <!-- Form Row        -->
                                <div class="row gx-3 mb-3">
                                    <!-- Form Group (organization name)-->
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputOrgName">Date of departure</label>

                                        <input class="form-cont" id="Departuredate" type="date" name="Departuredate" placeholder="Enter Date of departure" >
                                    </div>
                                    <!-- Form Group (location)-->
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputLocation">Time of Departure</label>
                                        <input class="form-cont" id="time" type="time" name="time" value="10:10" >
                                    </div>
                                </div>
                                <!-- Save changes button-->
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    
</body>
</html>